{
	"version": 2,
	"builds": [
		{
			"src": "src/server.js",
			"use": "@vercel/node",
			"config": {
				"includeFiles": "dist/**/*"
			}
		},
		{
			"src": "package.json",
			"use": "@vercel/static-build"
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/src/server.js"
		},
		{
			"src": "/(.*)",
			"dest": "/index.html"
		}
	]
}
